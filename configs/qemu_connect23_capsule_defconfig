# Architecture
BR2_aarch64=y

# Build
BR2_GLOBAL_PATCH_DIR="board/qemu/connect23/patches"

# System
BR2_INIT_NONE=y
BR2_SYSTEM_BIN_SH_NONE=y

# Image
BR2_ROOTFS_POST_IMAGE_SCRIPT="board/qemu/post-image.sh board/qemu/connect23/post-image-capsule.sh support/scripts/genimage.sh"
BR2_ROOTFS_POST_SCRIPT_ARGS="$(BR2_DEFCONFIG) -c board/qemu/connect23/genimage.cfg"

# Linux headers
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_0=y

# Packages
# BR2_PACKAGE_BUSYBOX is not set

# Filesystem
# BR2_TARGET_ROOTFS_TAR is not set

# Firmware
BR2_TARGET_UBOOT=y
BR2_TARGET_UBOOT_BUILD_SYSTEM_KCONFIG=y
BR2_TARGET_UBOOT_CUSTOM_VERSION=y
BR2_TARGET_UBOOT_CUSTOM_VERSION_VALUE="2023.01"
BR2_TARGET_UBOOT_BOARD_DEFCONFIG="qemu_arm64"
BR2_TARGET_UBOOT_CONFIG_FRAGMENT_FILES="board/qemu/connect23/u-boot-capsule.fragment"
BR2_TARGET_UBOOT_NEEDS_OPENSSL=y

# Host tools
BR2_PACKAGE_HOST_DOSFSTOOLS=y
BR2_PACKAGE_HOST_EFITOOLS=y
BR2_PACKAGE_HOST_GCAB=y
BR2_PACKAGE_HOST_GENIMAGE=y
BR2_PACKAGE_HOST_MTOOLS=y
BR2_PACKAGE_HOST_UBOOT_TOOLS=y
BR2_PACKAGE_HOST_UBOOT_TOOLS_FIT_SUPPORT=y
